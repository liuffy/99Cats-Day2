<html>

  <%= render "shared/errors" %>
  <%= link_to "<< Back to all cats", cats_url %>

<center><h2>Rental Request Form</h2>
  <form action="<%= cat_rental_requests_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<!-- CHOOSE CAT -->
  <label for="cat_selection">Select cat:</label>
  <select name="cat_rental_request[cat_id]" id="cat_selection">
      <option>Select cat</option>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
          <% end %>
  </select>
  <br>
<!-- CHOOSE START AND END DATE -->
  Select the time period you would like to rent this cat:
<br>
  <label for="rental_start_date">Start date:</label>
  <input type="date" name="cat_rental_request[start_date]" id="rental_start_date">
<br>
  <label for="rental_end_date">End date:</label>
  <input type="date" name="cat_rental_request[end_date]" id="rental_end_date">
<br>
<input type="submit" value="SUBMIT RENTAL REQUEST">
</form></center>

</body>
</html>
