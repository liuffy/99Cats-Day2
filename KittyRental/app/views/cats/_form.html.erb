<html>
<% action= cat.persisted? ? cat_url(cat) : cats_url %>
<% method= cat.persisted? ? :patch : :post %>

<center><form action ="<%= action %>" method = "post">
  <input type="hidden" name="_method" value="<%= method %>">

<!-- NAME  -->
  <label for="cat_name">Cat's name:</label>
    <input type="text" id="cat_name" name="cat[name]" value="<%= cat.name %>" placeholder="Enter cat name here...">

<br>
<!-- GENDER -->
  <label for="cat_sex">Cat's gender:</label>
    Male<input type="radio" id="cat_sex" name="cat[sex]" value="M"
    <%= cat.sex == "M" ? "checked" : "" %>>
    Female<input type="radio" id="cat_sex" name="cat[sex]" value="F"
    <%= cat.sex == "F" ? "checked" : "" %>>

<br>
<!-- COLOR -->
  <label for="cat_color">Color</label>
  <select name="cat[color]" id="cat_color">
      <option>Select color</option>
    <% Cat::CAT_COLORS.each do |color| %>
      <option
      <%= cat.color == color ? "selected" : "" %>
        value="<%= color %>">
        <%= color.upcase %></option>

          <% end %>
  </select>

<br>
<!-- BIRTH DATE  -->
<label for="cat_birth_date">Cat's birth date</label>
<input type="date" name="cat[birth_date]" id="cat_birth_date" value="<%= cat.birth_date %>"><br>

<!-- DESCRIPTION  -->
  Cat's description:<br>

    <textarea name="cat[description]" cols="60" rows="10" placeholder="Describe your cat here..."><%= cat.description %></textarea>
<br>
<% submit_text = (cat.persisted? ? 'Update' : 'Create') + ' cat!' %>
<input type="submit" value="<%= submit_text %>">
</form><center>



</html>
